{
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "extends": [
    "next",
    "eslint:recommended",
    "plugin:tailwindcss/recommended",
    "plugin:prettier/recommended"
  ],
  "rules": {
    "prettier/prettier": "warn",
    "react/no-unescaped-entities": 0,
    "no-unused-vars": "warn",
    "tailwindcss/no-custom-classname": "off"
  }
}
